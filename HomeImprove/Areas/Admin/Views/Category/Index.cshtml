@model List<Category>

<div class="container">
	<div class="row pt-4 pb-3">
		<div class="col-6">
			<h2 class="text-primary">Category List</h2>
		</div>
		<div class="col-6 text-end">
			<a asp-controller="Category" asp-action="CreateCategory" class="btn btn-outline-success"><i class="bi bi-plus-circle"></i> Create new</a>
		</div>
	</div>
	<div class="categoryTable">
		<table class="table table-striped">
			<thead>
				<tr>
					<th>
						Category Name
					</th>
					<th>
						Display Order
					</th>
					<th></th>
				</tr>
			</thead>
			<tbody>
				@foreach (var obj in Model.OrderBy(u => u.DisplayOrder))
				{
					<tr>
						<td>@obj.Name</td>
						<td>@obj.DisplayOrder</td>
						<td>
							<div class="w-50 btn-group" role="group">
								<a asp-controller="Category" asp-action="EditCategory" asp-route-id="@obj.Id" class="btn btn-outline-primary mx-1 mb-2">
									<i class="bi bi-pencil-square"></i> Update
								</a>
								<a asp-controller="Category" asp-action="DeleteCategory" asp-route-id="@obj.Id" class="btn btn-outline-danger mx-1 mb-2">
									<i class="bi bi-trash-fill"></i> Delete
								</a>
							</div>
						</td>
					</tr>
				}
			</tbody>
		</table>
	</div>
</div>